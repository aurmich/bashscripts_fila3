<?php

declare(strict_types=1);

namespace Modules\Ptv\Filament\Widgets;

use Filament\Widgets\ChartWidget as BaseChartWidget;
use Illuminate\Contracts\Support\Htmlable;
use Illuminate\Contracts\View\View;

class ChartWidget extends BaseChartWidget implements Htmlable {
    final public function __construct(protected ?string $question_id) {
    }

    public static function make(string $question_id): static {
        return app(self::class, ['question_id' => $question_id]);
    }

    public function toHtml(): string {
        return $this->render()->render();
    }

    public function render(): View {
        $view_params = [
            'chart' => $this,
        ];

        return view('filament.widgets.test', $view_params);
    }

    public function getHeading(): string {
        return 'Blog posts';
    }

    protected function getData(): array {
        return [
            'datasets' => [
                [
                    'label' => 'Blog posts created',
                    'data' => [0, 10, 5, 2, 21, 32, 45, 74, 65, 45, 77, 89],
                ],
            ],
            'labels' => ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        ];
    }
}
